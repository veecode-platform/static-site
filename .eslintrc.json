{
  "extends": [
    "next/core-web-vitals", 
    "next/typescript"
  ],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-len": ["error", { "code": 80 }],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "jsx-quotes": ["error", "prefer-double"],
    "comma-dangle": ["error", "es5"],

    "no-unused-vars": "warn",
    "no-console": "warn"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    ".github",
    "package.json",
    "yarn.lock",
    "next.config.mjs",
    ".env.example"
  ]
}
